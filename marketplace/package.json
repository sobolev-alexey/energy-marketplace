{
    "name": "marketplace",
    "description": "Marketplace backend",
    "version": "1.1.0",
    "authors": [
        "Alexey Sobolev <alexey@iota.org>"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/iota-energy-broker.git"
    },
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "tslint -p ./tsconfig.json -c ./tslint.json -t verbose",
        "build-copy-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-lint build-copy-config",
        "serve-mon": "forever start ./dist/index.js",
        "start": "NODE_OPTIONS=--enable-source-maps run-p serve-mon build-watch"
    },
    "engines": {
        "node": ">=13.0"
    },
    "dependencies": {
        "@iota/client-load-balancer": "github:iotaledger/client-load-balancer#no-mam",
        "@iota/core": "1.0.0-beta.30",
        "@iota/mam.js": "github:iotaledger/mam.js",
        "@iota/transaction-converter": "1.0.0-beta.30",
        "axios": "^0.21.1",
        "body-parser": "1.19.0",
        "bull": "^3.20.1",
        "cors": "2.8.5",
        "express": "4.17.1",
        "lodash": "^4.17.20",
        "node-rsa": "^1.1.1",
        "randomstring": "^1.1.5",
        "redis": "^3.0.2",
        "socket.io-client": "^2.3.0",
        "sqlite3": "4.1.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bull": "^3.15.0",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.11",
        "@types/node": "^14.14.27",
        "@types/node-rsa": "^1.0.0",
        "@types/redis": "^2.8.28",
        "@types/socket.io": "^2.1.13",
        "copyfiles": "^2.4.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.1",
        "tslint": "^6.1.3",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "^3.7.0"
    },
    "resolutions": {
        "acorn": "^7.1.1",
        "kind-of": "^6.0.3",
        "lodash": "^4.17.20",
        "minimist": "^1.2.5",
        "node-fetch": "^2.6.1",
        "node-forge": "^0.10.0",
        "websocket-extensions": "^0.1.4",
        "yargs-parser": "^18.1.3"
    }
}
