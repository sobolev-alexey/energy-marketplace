{
    "name": "energy-prosumer",
    "description": "Energy Provider/Requester",
    "version": "1.0.0",
    "authors": [
        "Alexey Sobolev <alexey@iota.org>",
        "Martyn Janes <martyn.janes@iota.org>"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/iota-energy-broker.git"
    },
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "tslint -p ./tsconfig.json -c ./tslint.json -t verbose",
        "build-copy-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build-copy-docs": "copyfiles -u 1 ./src/docs/**/* ./dist",
        "build": "npm-run-all build-clean build-compile build-lint build-copy-docs build-copy-config",
        "serve-mon": "forever start ./dist/index.js",
        "start": "NODE_OPTIONS=--enable-source-maps run-p serve-mon build-watch",
        "docs-api": "api2html -o src/docs/index.html -l http,shell,javascript--nodejs spec/api.json -b -c spec/logo.png -u https://www.iota.org -i ../../../../spec/example,../../../../spec/changelog"
    },
    "engines": {
        "node": ">=13.0"
    },
    "dependencies": {
        "@iota/client-load-balancer": "github:iotaledger/client-load-balancer",
        "@iota/core": "1.0.0-beta.30",
        "@iota/mam.js": "github:iotaledger/mam.js",
        "@iota/transaction-converter": "1.0.0-beta.30",
        "axios": "^0.19.2",
        "body-parser": "1.19.0",
        "bull": "^3.15.0",
        "bull-board": "^0.9.0",
        "cors": "2.8.5",
        "express": "4.17.1",
        "lodash": "^4.17.15",
        "node-rsa": "^1.0.8",
        "randomstring": "^1.1.5",
        "redis": "^3.0.2",
        "socket.io": "^2.3.0",
        "sqlite3": "4.1.1",
        "uuid": "^7.0.3"
    },
    "devDependencies": {
        "@types/bull": "^3.14.0",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/node": "^14.0.14",
        "@types/node-rsa": "^1.0.0",
        "@types/redis": "^2.8.23",
        "@types/socket.io": "^2.1.8",
        "api2html": "^0.3.5",
        "copyfiles": "^2.3.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.1.1",
        "tslint": "^6.1.2",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "^3.7.0"
    }
}
